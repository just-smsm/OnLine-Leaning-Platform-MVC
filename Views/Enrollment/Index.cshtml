@model IEnumerable<OnlineLearningPlatform.ViewModels.EnrollmentViewModel>

@{
    ViewData["Title"] = "My Enrollments";
}

<h2>My Enrollments</h2>

@if (TempData["Message"] != null) {
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (!Model.Any()) {
    <p>You are not enrolled in any courses yet.</p>
} else {
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Course Name</th>
            <th>Enrollment Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var enrollment in Model) {
            <tr>
                <td>@enrollment.CourseName</td>
                <td>@enrollment.EnrolmentDateTime.ToString("dd MMM yyyy")</td>
                <td>
                    <a asp-action="Delete" asp-route-courseId="@enrollment.CourseId" class="btn btn-danger btn-sm">Unenroll</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}