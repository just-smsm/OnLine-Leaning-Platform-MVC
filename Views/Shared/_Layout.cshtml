@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment _env
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta
        name="viewport"
        content="width=device-width, initial-scale=1.0"
    />
    <title>@ViewData["Title"] - Online Learning Platform</title>
    @* <link
    rel="stylesheet"
    href="~/css/site.css"
    /> *@
    <link
        rel="stylesheet"
        href="~/lib/bootstrap/css/bootstrap.min.css"
    />
    <link
        rel="stylesheet"
        href="~/css/site.css"
    />
    <environment names="Development">
        @RenderSection("StyleSheets", required: false)
    </environment>
    @if (_env.EnvironmentName == "Development" && IsSectionDefined("StyleSheets"))
    {
        IgnoreSection("StyleSheets");
    }

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg custom-navbar">
            <div class="container-fluid">
                <a
                    class="navbar-brand d-flex align-items-center"
                    asp-controller="Home"
                    asp-action="Index"
                >
                    <img
                        src="~/img/logo.png.webp"
                        alt="Logo"
                        class="custom-logo"
                    >
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div
                    class="collapse navbar-collapse"
                    id="navbarSupportedContent"
                >
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 custom-nav">
                        <li class="nav-item p-lg-2">
                            <a
                                class="nav-link"
                                asp-controller="Home"
                                asp-action="Index"
                            >Home</a>
                        </li>
                        <li class="nav-item p-lg-2">
                            <a
                                class="nav-link"
                                asp-controller="Home"
                                asp-action="About"
                            >About</a>
                        </li>
                        <li class="nav-item p-lg-2">
                            <a
                                class="nav-link"
                                asp-controller="Home"
                                asp-action="Contact"
                            >Contact</a>
                        </li>
                        <li class="nav-item p-lg-2">
                            <a
                                class="nav-link"
                                asp-controller="Course"
                                asp-action="Index"
                            >Courses</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="Category"
                                    asp-action="Index"
                                >Categories</a>
                            </li>
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="Module"
                                    asp-action="Index"
                                >Modules</a>
                            </li>
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="Lesson"
                                    asp-action="Index"
                                >Lessons</a>
                            </li>
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="Quiz"
                                    asp-action="Index"
                                >Quizzes</a>
                            </li>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="Enrollment"
                                    asp-action="Index"
                                >My Enrollments</a>
                            </li>
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="StudentLesson"
                                    asp-action="Index"
                                >My Lessons</a>
                            </li>
                            <li class="nav-item p-lg-2">
                                <a
                                    class="nav-link"
                                    asp-controller="StudentQuizAttempt"
                                    asp-action="Index"
                                >My Quizzes</a>
                            </li>
                        }
                    </ul>

                    <div class="register d-flex align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a
                                class="nav-link p-lg-2 d-flex align-items-center"
                                asp-controller="Account"
                                asp-action="Profile"
                            >
                                @if (ViewData["ProfilePictureUrl"] != null)
                                {
                                    <img
                                        src="data:image/jpeg;base64,@ViewData["ProfilePictureUrl"]"
                                        alt="Profile Picture"
                                        class="profile-picture rounded-circle"
                                    >
                                }
                                <span class="ms-2">@ViewData["FirstName"] @ViewData["LastName"]</span>
                            </a>
                            <form
                                asp-controller="Account"
                                asp-action="Logout"
                                method="post"
                                class="d-inline"
                            >
                                <button
                                    type="submit"
                                    class="nav-link p-lg-2 btn-link"
                                >Logout</button>
                            </form>
                        }
                        else
                        {
                            <a
                                class="nav-link p-lg-2 mx-2"
                                asp-controller="Account"
                                asp-action="Login"
                            >Login</a>
                            <a
                                class="nav-link p-lg-2"
                                asp-controller="Account"
                                asp-action="Register"
                            >Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="">
        <main
            role="main"
            class="pb-3"
        >
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">&copy; 2024 Online Learning Platform</span>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script
        src="~/js/site.js"
        asp-append-version="true"
    ></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>