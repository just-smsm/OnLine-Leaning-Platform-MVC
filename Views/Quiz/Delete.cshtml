@model QuizViewModel


@{
    var courses = ViewData["CourseList"] as List<CourseViewModel>;
}

<!DOCTYPE html>

<html>

<head>
    <meta
        name="viewport"
        content="width=device-width"/>
    <title>Delete</title>
</head>

<body>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>QuizViewModel</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Quiz Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Model.Number
        </dd>
        <dt class="col-sm-2">
            Course Order
        </dt>
        <dd class="col-sm-10">
            @Model.CourseOrder
        </dd>
        <dt class="col-sm-2">
            Min Pass Score
        </dt>
        <dd class="col-sm-10">
            @Model.MinPassScore
        </dd>
        <dt class="col-sm-2">
            Is Pass Required
        </dt>
        <dd class="col-sm-10">
            @Model.IsPassRequired
        </dd>
        <dt class="col-sm-2">
            Course Name
        </dt>
        <dd class="col-sm-10">
            @courses?.FirstOrDefault(c => c.Id == Model.CourseId)?.Name
        </dd>
    </dl>

    <form asp-action="ConfirmDelete">
        <input
            type="hidden"
            asp-for="Id"/>
        <input
            type="submit"
            value="Delete"
            class="btn btn-danger"/> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
</body>

</html>