@model IEnumerable<OnlineLearningPlatform.ViewModels.UserQuizViewModel>

<div class="container my-4">
    <h2 class="text-center mb-4">My Quizzes</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning text-center" role="alert">
            @ViewBag.Message
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Quiz ID</th>
                        <th>Quiz Name</th>
                        <th>Score</th>
                        <th>Attempt Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quiz in Model)
                    {
                        <tr>
                            <td>@quiz.QuizId</td>
                            <td>@quiz.QuizName</td>
                            <td>
                                <span class="badge bg-success">@quiz.ScoreAchieved%</span>
                            </td>
                            <td>@quiz.AttemptDate.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
