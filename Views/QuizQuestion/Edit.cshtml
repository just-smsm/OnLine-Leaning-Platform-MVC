@model QuizQuestionViewModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Question</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="QuestionTitle" class="form-label"></label>
                    <input asp-for="QuestionTitle" class="form-control" />
                    <span asp-validation-for="QuestionTitle" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="QuizId" />

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-route-quizId="@Model?.QuizId">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
