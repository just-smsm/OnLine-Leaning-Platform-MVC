@model QuizQuestionViewModel



<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>QuizQuestionViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuestionTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuizId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QuizId)
        </dd>
        <dt class="col-sm-2">
            Answers
        </dt>
        <dd class="col-sm-10">
            @foreach (var answer in ViewBag.Answers)
            {
                <p>@answer.AnswerText
                    @if (answer.IsCorrect)
                    {
                        <strong>(Correct)</strong>
                    }
                </p>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input
            type="hidden"
            asp-for="Id"
        />
        <input
            type="submit"
            value="Delete"
            class="btn btn-danger"
        /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>