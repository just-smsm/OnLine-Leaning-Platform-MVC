@model ModuleViewModel

@{
    ViewData["Title"] = "Edit";
    var courses = ViewData["CoursesList"] as List<CourseViewModel>;
}

<h4>ModuleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div
                asp-validation-summary="ModelOnly"
                class="text-danger"
            ></div>
            <input
                type="hidden"
                asp-for="Id"
            />
            <div class="form-group">
                <label
                    asp-for="Name"
                    class="control-label"
                ></label>
                <input
                    asp-for="Name"
                    class="form-control"
                />
                <span
                    asp-validation-for="Name"
                    class="text-danger"
                ></span>
            </div>
            <div class="form-group">
                <label
                    asp-for="Number"
                    class="control-label"
                ></label>
                <input
                    asp-for="Number"
                    class="form-control"
                />
                <span
                    asp-validation-for="Number"
                    class="text-danger"
                ></span>
            </div>
            <div class="form-group">
                <select
                    asp-for="CourseId"
                    class="form-select"
                >
                    @if (courses != null)
                    {

                        @foreach (var course in courses)
                        {
                            <option
                                value="@course.Id"
                                selected="@((course.Id == course.Id) ? "selected" : "")"
                            >
                                @course.Name
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input
                    type="submit"
                    value="Save"
                    class="btn btn-primary"
                />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>