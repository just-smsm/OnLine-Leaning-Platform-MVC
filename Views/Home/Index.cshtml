@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var categories = ViewData["Categories"] as List<CategoryViewModel>;
}

@section StyleSheets {
    <link
        href="~/css/home.css"
        rel="stylesheet"
    >
}

<div
    id="hero"
    class="p-5 text-center bg-image hero container-fluid"
>
    <div class="container d-flex justify-content-center align-items-center hero-inner">
        <div class="row w-100">
            <div class="col-md-6 hero-text">
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeIn animate__delay-1s">Elevate Your
                    Learning Experience</h1>
                <p class="lead mb-4 animate__animated animate__fadeIn animate__delay-2s">
                    Discover a wide range of courses tailored to enhance your skills and knowledge. Engage with experts
                    and unlock your potential today.
                </p>
                @if (!(User.Identity != null && User.Identity.IsAuthenticated))
                {
                    <a
                        class="btn btn-primary btn-lg animate__animated animate__fadeIn animate__delay-3s"
                        asp-action="Register"
                        asp-controller="Account"
                    >Join Now</a>
                }
            </div>
            @if ((User.Identity != null && User.Identity.IsAuthenticated && ViewData["ProfilePictureUrl"] != null))
            {
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <img
                        src="data:image/jpeg;base64,@ViewData["ProfilePictureUrl"]"
                        alt="Hero Image"
                        class="img-fluid animate__animated animate__fadeIn animate__delay-4s"
                    >
                </div>
            }
        </div>
    </div>
</div>

<div class="container">
    <!-- Categories Section -->
    <section class="categories">
        <h2
            id="category-heading"
            class="mb-5 mt-5 fs-1 text-center text-primary"
        >Categories</h2>
        <div class="row mb-4 container-fluid g-4">
            @foreach (var category in ViewBag.Categories)
            {
                <div class="col-md-4 d-flex align-items-stretch">
                    <div class="card custom-category-card h-100">
                        <div class="card-body text-center card-category d-flex flex-column justify-content-center">
                            <a
                                class="card-title custom-card-category-title text-decoration-none p-md-4"
                                asp-action="Details"
                                asp-controller="Category"
                                asp-route-id="@category.Id"
                            >@category.Name</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Courses Section -->
    <section class="courses">
        <h2
            id="course-list-heading"
            class="mb-5 mt-5 fs-1 text-center"
        >Our Courses</h2>
            <div
                id="course-list"
                class="row g-4"
            >
                <partial
                    name="_CourseListPartial"
                    model="Model"
                />
            </div>
    </section>

    <section class="about mt-5 mb-5 text-center text-lg-start custom-about-section">
        <div class="container">

            <h2
                id="about-heading"
                class="mb-5 mt-5 fs-1 text-center"
            >About Us</h2>
            <div class="row mt-lg-5">
                <div class="col-md-6">
                    <p class="lead mb-4">We are a team of passionate educators and technology enthusiasts. Our platform
                        is
                        dedicated to providing you with access to a wide range of online courses. At LearnHub, we
                        believe that learning should be accessible to everyone. That's why we strive to create courses
                        that are engaging, informative, and tailored to your needs. Whether you're a beginner or an
                        experienced learner, we have something for you.</p>
                </div>
                <div class="col-md-6">
                    <img
                        src="~/img/course_1.webp"
                        alt="About Us"
                        class="img-fluid"
                    >
                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts {
    <script src="~/js/home.js"></script>
}