@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@{
    var categories = ViewData["Categories"] as List<CategoryViewModel>;
}

<head>
    <link
        rel="stylesheet"
        href="~/@(nameof(OnlineLearningPlatform)).styles.css"
        asp-append-version="true"
    >

</head>

<div class="container">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-light my-4">
        <h1 class="display-4">Welcome to Online Learning Platform!</h1>
        <p class="lead">Explore a variety of courses to enhance your skills.</p>
        <a
            class="btn btn-primary btn-lg"
            asp-controller="Course"
            asp-action="Index"
        >Browse Courses</a>
    </div>

    <!-- Categories Section -->
    <h2 id="category-heading">Categories</h2>
    <div class="row mb-4">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <a
                            class="btn btn-primary"
                            asp-controller="Course"
                            asp-action="Index"
                        >View Courses</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Courses Section -->
    <h2 id="course-list-heading">Courses</h2>

    <!-- Search and Filter Section -->
    <div
        class="row mb-4"
        id="search-and-filter"
    >
        <div class="col-md-8">
            <input
                type="text"
                id="search-query"
                class="form-control"
                placeholder="Search for courses..."
            >
        </div>
        <div class="col-md-4">
            <select
                name="category"
                id="category-filter"
                class="form-control"
            >
                <option value="">All Categories</option>
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
    </div>


    <div
        id="course-list"
        class="row"
    >
        @foreach (var course in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img
                        src="/img/@(course.ImageUrl).webp"
                        class="card-img-top"
                        alt="Course Image"
                    >
                    <div class="card-body">
                        <h5 class="card-title">@course.Name</h5>
                        <p class="card-text">@course.Description</p>
                        <p class="card-text">Price: @course.Price</p>
                        <p class="card-text">Category: @(categories?.FirstOrDefault(c => c.Id == course.CategoryId)?.Name)
                        </p>
                        <a
                            class="btn btn-primary"
                            asp-controller="Course"
                            asp-action="Details"
                            asp-route-id="@course.Id"
                        >View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/home.js"></script>
}


<style>
    #search-query {
        margin-bottom: 1rem;
    }

    #search-button {
        margin-bottom: 1rem;
    }

    #category-filter {
        margin-bottom: 1rem;
    }

    #course-list {
        margin-top: 1rem;
    }
</style>
