@model OnlineLearningPlatform.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Course Details";
    var modulesNames = ViewData["ModulesNames"] as List<string>;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h2 class="display-4">@Model.Name</h2>
            <p class="lead">@Model.Description</p>
            <h5>Price: @Model.Price.ToString("C")</h5>
        </div>

        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded">
        </div>
    </div>

    <hr class="my-4">

    <div class="mt-5">
        <h3>Modules</h3>
        @if (modulesNames != null && modulesNames.Any()) {
            @foreach (var moduleName in modulesNames) {
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#flush-collapse@moduleName" aria-expanded="false" aria-controls="flush-collapseOne">
                                @moduleName
                            </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                @*lesson content*@
                            </div>
                        </div>
                    </div>
                </div>
            }
        } else {
            <p class="text-muted">No modules available for this course.</p>
        }
    </div>
</div>

@section Scripts {
    <script>
    
</script>
}